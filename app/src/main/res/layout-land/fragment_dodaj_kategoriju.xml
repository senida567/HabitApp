<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/design_default_color_surface"
    tools:context=".ui.categories.DodajKategorijuFragment">

    <!--ImageView
        android:id="@+id/slika"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:src="@drawable/motivation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="10dp"
        android:contentDescription="MOTIVATION" /-->

    <TextView
        android:id="@+id/textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DODAJ NOVU KATEGORIJU"
        android:textSize="20dp"
        android:backgroundTintMode="src_over"
        app:layout_constraintTop_toBottomOf="@+id/slika"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textview2"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/naziv"
        android:layout_marginTop="20dp"
        android:text="Naziv"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/naziv"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textview1"
        app:layout_constraintStart_toEndOf="@id/textview2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/naziv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/osobina"
        android:layout_marginTop="5dp"
        android:text="Osobina"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <EditText
        android:id="@+id/osobina"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/naziv"
        app:layout_constraintStart_toEndOf="@id/textview2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/textview4"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/osobina"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tip"
        android:layout_marginTop="20dp"
        android:text="Tip"
        android:textSize="20dp"
        android:textAlignment="center"
        android:gravity="center_horizontal" />

    <Spinner
        android:id="@+id/tip"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/osobina"
        app:layout_constraintStart_toEndOf="@id/textview2"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/novaKategorija"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:clickable="true"
        android:focusable="true"
        android:text="DODAJ"
        app:layout_constraintTop_toBottomOf="@id/tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        />

</androidx.constraintlayout.widget.ConstraintLayout>